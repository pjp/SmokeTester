{
  "setup": {
    "timeout_seconds_for_all_tests": 600,
    "thread_pool_size": 2,
    "system_variables": [
      {"name": "ST_VERSION",          "internal_value": "VERSION"},
      {"name": "ST_CMD_LINE",         "internal_value": "CMD_LINE"},
      {"name": "ST_TIMEOUT",          "internal_value": "TIMEOUT"},
      {"name": "ST_THREAD_POOL_SIZE", "internal_value": "THREAD_POOL_SIZE"},
      {"name": "ST_ID",               "internal_value": "ID"},
      {"name": "ST_OS",               "internal_value": "OS"},
      {"name": "ST_TAG", "internal_value_from_matching_tag": {
        "DEV":  "DEV",
        "SIT":  "SIT",
        "UAT":  "UAT",
        "PROD": "PROD"}
      },
      {
        "name": "ST_VALUE1",
        "inline_value_from_matching_tag": {
          "DEV": "Hello from DEV",
          "SIT": "Hello from SIT",
          "UAT": "Hello from UAT",
          "PROD": "Hello from PROD"
        }
      },
      {
        "name": "ST_VALUE2",
        "inline_value_from_matching_tag": {
          "DEV": "Bye from DEV",
          "SIT": "Bye from SIT",
          "UAT": "Bye from UAT",
          "PROD": "Bye from PROD"
        }
      }
    ]
  },
  "test": {
    "id1": {
      "run" : {"always": true},
      "cmd":"echo OS is [$ST_OS] with selector tag [$ST_TAG] and value [$ST_VALUE1], from test id [$ST_ID]"
    },
    "id2": {
      "run" : {"if_tag_matches": ["DEV"]},
      "cmd":"hostname"
    },
    "id3": {
      "run" : {"unless_tag_matches": ["PROD"]},
      "cmd": "xyz $ST_VALUE2"
    },
    "id4": {
      "run" : { "never" : true },
      "cmd":""
    }
  }
}